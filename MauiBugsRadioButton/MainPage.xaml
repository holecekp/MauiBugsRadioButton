<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBugsRadioButton.MainPage">

    <ContentPage.Resources>
        <ControlTemplate x:Key="RadioButtonTemplate">
            <ContentPresenter />
        </ControlTemplate>
    </ContentPage.Resources>

    <ContentPage.Content>
        <HorizontalStackLayout
                Padding="30,0"
                Spacing="25"
                VerticalOptions="Start"
                RadioButtonGroup.GroupName="animals">

            <RadioButton Value="Cat" ControlTemplate="{StaticResource RadioButtonTemplate}">
                <RadioButton.Content>
                    <Label Text="Cat" />
                </RadioButton.Content>
            </RadioButton>
            <RadioButton Value="Dog" ControlTemplate="{StaticResource RadioButtonTemplate}">
                <RadioButton.Content>
                    <Label Text="Dog" />
                </RadioButton.Content>
            </RadioButton>
            <RadioButton Value="Elephant" ControlTemplate="{StaticResource RadioButtonTemplate}">
                <RadioButton.Content>
                    <Label Text="Elephant" />
                </RadioButton.Content>
            </RadioButton>
        </HorizontalStackLayout>
    </ContentPage.Content>
</ContentPage>
