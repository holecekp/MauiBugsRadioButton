    <ContentPage.Content>
            <VerticalStackLayout
                Padding="20,20"
                Spacing="10"
                VerticalOptions="Start">

            <Label Text="2" FontAttributes="Bold" Margin="0, 20, 0, 0" />
            <Label x:Name="LabelTwo" />
            <Label x:Name="LabelTwoIsCorrect" />

            <Label Text="12" FontAttributes="Bold" Margin="0, 20, 0, 0" />
            <Label x:Name="LabelTwelve" />
            <Label x:Name="LabelTwelveIsCorrect" />

            <Label Text="200" FontAttributes="Bold" Margin="0, 20, 0, 0" />
